<nav class="fixed top-0 flex items-center justify-center lg:w-full not-lg:scale-70">
    <div class="not-lg:flex-col not-lg:flex transition-transform pl-5 pr-5 pt-2 pb-2 rounded-xl border border-black backdrop-blur-sm bg-radial from-[#ffdcd5]/25 to-[#cb6ce6]/25 from-0% to-100%">
        <button class="lg:invisible lg:hidden transition-transform h-10 w-10 p-1 cursor-pointer hover:text-[#ffdcd5] hover:scale-80" onclick="toggleMenu();">
            <img src="/menu.svg" alt="Menu" />
        </button>
        <div id="menuItems" class="not-lg:flex-col not-lg:hidden">
            <button class="transition-transform italic font-bold lg:pr-2 lg:pl-2 cursor-pointer text-black hover:text-[#ffdcd5] hover:rounded hover:bg-[#cb6ce6] hover:scale-80">Inicio</button>
            <button class="transition-transform italic font-bold lg:pr-2 lg:pl-2 cursor-pointer text-black hover:text-[#ffdcd5] hover:rounded hover:bg-[#cb6ce6] hover:scale-80">Sobre mí</button>
