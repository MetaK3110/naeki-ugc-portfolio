        </div>
    </div>
</nav>

<script>
    function toggleMenu() {
        const menuItems = document.getElementById('menuItems');
        if (!menuItems) {
            return;
        }
        if (menuItems.classList.contains('not-lg:hidden')) {
            menuItems.classList.remove('not-lg:hidden');
            menuItems.classList.add('flex');
        } else {
            menuItems.classList.add('not-lg:hidden');
            menuItems.classList.remove('flex');
        }
    }
    // Expose to global scope so inline onclick can find it and TS sees it as used
    (window as any).toggleMenu = toggleMenu;
</script>